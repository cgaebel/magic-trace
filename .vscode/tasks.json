{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "command": "dune",
            "args": [
                "build",
                "@default",
                "@runtest",
                "@fmt",
                "--auto-promote",
                "--watch"
            ],
            "problemMatcher": [
                "$ocamlc"
            ],
            "isBackground": true,
        }
    ]
}
